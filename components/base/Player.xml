<?xml version="1.0" encoding="utf-8" ?>
<component name="rcw_Player" extends="Group">
    <!-- I don't think this needs to extend a base page or anything -->
	<interface>
		<field id="eventCallback" type="node" onChange="onEventCallback"/>
		<field id="class" type="string" onChange="onClassSet"/>
        <field id="race" type="string" onChange="onRaceSet"/>
        <field id="location" type="intArray" value="[0,0]"/>
	</interface>

	<!-- general scripts -->
    <script type="text/brightscript"  uri="pkg:/components/base/scripts/Player.brs"/>

    <children>
        <Group id="bg_holder" />
        <Group id="tile_holder" />
 	</children>
</component>




<?xml version="1.0" encoding="utf-8" ?>
<component name="rcw_CharSelect">
    <!-- I don't think this needs to extend a base page or anything -->
	<interface>
		<field id="eventFired" type="node" onChange="eventHandler"/>
	</interface>

	<!-- general scripts -->
    <script type="text/brightscript"  uri="pkg:/components/scripts/CharSelect.brs"/>
    <script type="text/brightscript"  uri="pkg:/source/utils/Events.brs"/>

    <children>
        <LayoutGroup id="mainLayout" layoutDirection="horiz" itemSpacings="[100,100]" translation="[300,300]">
            <Label color="0x669900FF" text="Character Select" horizAlign="center" translation="[0,0]" />
            <LabelList id="charSelector" translation="[300,300]" >
                <ContentNode id="charSelectorContent" role="content" >
                    <ContentNode title="Warrior" description="fighter" />
                    <ContentNode title="Wizard" description="wizard" />
                    <ContentNode title="Thief" description="rogue" />
                </ContentNode>
            </LabelList>

        </LayoutGroup>

 	</children>
</component>


